<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.GridPane?>

<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.layout.ColumnConstraints?>

<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.control.SeparatorMenuItem?>

<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.Label?>
<?import com.codedead.opal.domain.SoundPane?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.text.Font?>

<?import javafx.scene.control.CheckMenuItem?>
<GridPane
        prefHeight="370"
        prefWidth="560"
        xmlns:fx="http://javafx.com/fxml/1"
        fx:id="grpMain"
        fx:controller="com.codedead.opal.controller.MainWindowController"
        onDragOver="#onDragOver"
        onDragDropped="#onDragDropped"
>

    <rowConstraints>
        <RowConstraints/>
        <RowConstraints vgrow="ALWAYS"/>
    </rowConstraints>

    <columnConstraints>
        <ColumnConstraints hgrow="ALWAYS"/>
    </columnConstraints>

    <MenuBar GridPane.rowIndex="0">
        <Menu text="%File">
            <MenuItem fx:id="mniOpenSoundPreset" onAction="#openSoundPresetAction" text="%OpenSoundPreset"/>
            <MenuItem fx:id="mniSaveSoundPreset" onAction="#saveSoundPresetAction" text="%SaveSoundPreset"/>
            <SeparatorMenuItem/>
            <MenuItem fx:id="mniReset" onAction="#resetAction" text="%Reset"/>
            <SeparatorMenuItem/>
            <MenuItem fx:id="mniExit" onAction="#exitAction" text="%Exit"/>
        </Menu>
        <Menu text="%Tools">
            <MenuItem fx:id="mniSettings" onAction="#settingsAction" text="%Settings"/>
            <Menu text="%Timer" fx:id="mnuTimer">
                <CheckMenuItem fx:id="mniTimerEnabled" text="%Enabled"/>
            </Menu>
        </Menu>
        <Menu text="%HelpMenu">
            <MenuItem fx:id="mniHelp" onAction="#helpAction" text="%Help"/>
            <SeparatorMenuItem/>
            <MenuItem fx:id="mniUpdate" onAction="#updateAction" text="%CheckForUpdates"/>
            <SeparatorMenuItem/>
            <MenuItem fx:id="mniHomepage" onAction="#homepageAction" text="%Homepage"/>
            <MenuItem fx:id="mniLicense" onAction="#licenseAction" text="%License"/>
            <SeparatorMenuItem/>
            <MenuItem fx:id="mniDonate" onAction="#donateAction" text="%Donate"/>
            <MenuItem fx:id="mniAbout" onAction="#aboutAction" text="%About"/>
        </Menu>
    </MenuBar>

    <ScrollPane GridPane.rowIndex="1" fitToHeight="true" fitToWidth="true" style="-fx-background-color:transparent;">
        <GridPane>
            <rowConstraints>
                <RowConstraints/>
                <RowConstraints/>
                <RowConstraints/>
                <RowConstraints/>
                <RowConstraints/>
                <RowConstraints/>
                <RowConstraints/>
                <RowConstraints/>
            </rowConstraints>

            <columnConstraints>
                <ColumnConstraints percentWidth="15"/>
                <ColumnConstraints hgrow="ALWAYS"/>
                <ColumnConstraints percentWidth="15"/>
            </columnConstraints>

            <Label GridPane.rowIndex="0" GridPane.columnIndex="1" text="%Nature">
                <font>
                    <Font name="System Bold" size="14"/>
                </font>
                <GridPane.margin>
                    <Insets left="5" right="5" bottom="10" top="10"/>
                </GridPane.margin>
            </Label>

            <GridPane GridPane.rowIndex="1" GridPane.columnIndex="1"
                      style="-fx-background-color: white;-fx-background-radius: 10px;">
                <rowConstraints>
                    <RowConstraints vgrow="ALWAYS"/>
                    <RowConstraints vgrow="ALWAYS"/>
                    <RowConstraints vgrow="ALWAYS"/>
                    <RowConstraints vgrow="ALWAYS"/>
                    <RowConstraints vgrow="ALWAYS"/>
                    <RowConstraints vgrow="ALWAYS"/>
                    <RowConstraints vgrow="ALWAYS"/>
                    <RowConstraints vgrow="ALWAYS"/>
                    <RowConstraints vgrow="ALWAYS"/>
                </rowConstraints>

                <columnConstraints>
                    <ColumnConstraints hgrow="ALWAYS"/>
                </columnConstraints>

                <SoundPane fx:id="snpRain" GridPane.rowIndex="0" volume="0" name="%Rain"
                           image="/images/rain.png"/>
                <SoundPane fx:id="snpWind" GridPane.rowIndex="1" volume="0" name="%Wind"
                           image="/images/wind.png"/>
                <SoundPane fx:id="snpThunder" GridPane.rowIndex="2" volume="0" name="%Thunder"
                           image="/images/thunder.png"/>
                <SoundPane fx:id="snpBird" GridPane.rowIndex="3" volume="0" name="%Birds"
                           image="/images/bird.png"/>
                <SoundPane fx:id="snpRiver" GridPane.rowIndex="4" volume="0" name="%River"
                           image="/images/river.png"/>
                <SoundPane fx:id="snpFireplace" GridPane.rowIndex="5" volume="0" name="%Fireplace"
                           image="/images/fire.png"/>
                <SoundPane fx:id="snpCave" GridPane.rowIndex="6" volume="0" name="%Cave"
                           image="/images/cave.png"/>
                <SoundPane fx:id="snpFrogs" GridPane.rowIndex="7" volume="0" name="%Frogs"
                           image="/images/frogs.png"/>
                <SoundPane fx:id="snpZoo" GridPane.rowIndex="8" volume="0" name="%Zoo"
                           image="/images/zoo.png"/>
            </GridPane>

            <Label GridPane.rowIndex="2" GridPane.columnIndex="1" text="%Office">
                <font>
                    <Font name="System Bold" size="14"/>
                </font>
                <GridPane.margin>
                    <Insets left="5" right="5" bottom="10" top="10"/>
                </GridPane.margin>
            </Label>

            <GridPane GridPane.rowIndex="3" GridPane.columnIndex="1"
                      style="-fx-background-color: white;-fx-background-radius: 10px;">
                <rowConstraints>
                    <RowConstraints vgrow="ALWAYS"/>
                    <RowConstraints vgrow="ALWAYS"/>
                    <RowConstraints vgrow="ALWAYS"/>
                    <RowConstraints vgrow="ALWAYS"/>
                    <RowConstraints vgrow="ALWAYS"/>
                    <RowConstraints vgrow="ALWAYS"/>
                    <RowConstraints vgrow="ALWAYS"/>
                </rowConstraints>

                <columnConstraints>
                    <ColumnConstraints hgrow="ALWAYS"/>
                </columnConstraints>

                <SoundPane fx:id="snpTyping" GridPane.rowIndex="0" volume="0" name="%Typing"
                           image="/images/keyboard.png"/>
                <SoundPane fx:id="snpTelephone" GridPane.rowIndex="1" volume="0" name="%Phone"
                           image="/images/phone.png"/>
                <SoundPane fx:id="snpChatter" GridPane.rowIndex="2" volume="0" name="%Chatter"
                           image="/images/group.png"/>
                <SoundPane fx:id="snpTraffic" GridPane.rowIndex="3" volume="0" name="%Traffic"
                           image="/images/car.png"/>
                <SoundPane fx:id="snpClock" GridPane.rowIndex="4" volume="0" name="%Clock"
                           image="/images/clock.png"/>
                <SoundPane fx:id="snpFan" GridPane.rowIndex="5" volume="0" name="%Fan"
                           image="/images/fan.png"/>
                <SoundPane fx:id="snpCoffee" GridPane.rowIndex="6" volume="0" name="%Coffee"
                           image="/images/coffee.png"/>
            </GridPane>

            <Label GridPane.rowIndex="4" GridPane.columnIndex="1" text="%Audiences">
                <font>
                    <Font name="System Bold" size="14"/>
                </font>
                <GridPane.margin>
                    <Insets left="5" right="5" bottom="10" top="10"/>
                </GridPane.margin>
            </Label>

            <GridPane GridPane.rowIndex="5" GridPane.columnIndex="1"
                      style="-fx-background-color: white;-fx-background-radius: 10px;">
                <rowConstraints>
                    <RowConstraints vgrow="ALWAYS"/>
                    <RowConstraints vgrow="ALWAYS"/>
                    <RowConstraints vgrow="ALWAYS"/>
                    <RowConstraints vgrow="ALWAYS"/>
                </rowConstraints>

                <columnConstraints>
                    <ColumnConstraints hgrow="ALWAYS"/>
                </columnConstraints>

                <SoundPane fx:id="snpNetworkingEvent" GridPane.rowIndex="0" volume="0" name="%NetworkingEvent"
                           image="/images/networking.png"/>
                <SoundPane fx:id="snpTribal" GridPane.rowIndex="1" volume="0" name="%TribalFestival"
                           image="/images/tribal.png"/>
                <SoundPane fx:id="snpDrumTribal" GridPane.rowIndex="2" volume="0" name="%DrumTribalFestival"
                           image="/images/tribal2.png"/>
                <SoundPane fx:id="snpRugbyFootball" GridPane.rowIndex="3" volume="0" name="%RugbyFootball"
                           image="/images/rugbyfootball.png"/>
            </GridPane>

            <Label GridPane.rowIndex="6" GridPane.columnIndex="1" text="%Other">
                <font>
                    <Font name="System Bold" size="14"/>
                </font>
                <GridPane.margin>
                    <Insets left="5" right="5" bottom="10" top="10"/>
                </GridPane.margin>
            </Label>

            <GridPane GridPane.rowIndex="7" GridPane.columnIndex="1"
                      style="-fx-background-color: white;-fx-background-radius: 10px;">
                <GridPane.margin>
                    <Insets bottom="10"/>
                </GridPane.margin>
                <rowConstraints>
                    <RowConstraints vgrow="ALWAYS"/>
                    <RowConstraints vgrow="ALWAYS"/>
                    <RowConstraints vgrow="ALWAYS"/>
                    <RowConstraints vgrow="ALWAYS"/>
                    <RowConstraints vgrow="ALWAYS"/>
                </rowConstraints>

                <columnConstraints>
                    <ColumnConstraints hgrow="ALWAYS"/>
                </columnConstraints>

                <SoundPane fx:id="snpStatic" GridPane.rowIndex="0" volume="0" name="%Static"
                           image="/images/radio.png"/>
                <SoundPane fx:id="snpFantasy" GridPane.rowIndex="1" volume="0" name="%Fantasy"
                           image="/images/star.png"/>
                <SoundPane fx:id="snpZen" GridPane.rowIndex="2" volume="0" name="%Zen"
                           image="/images/zen.png"/>
                <SoundPane fx:id="snpSleepy" GridPane.rowIndex="3" volume="0" name="%Sleepy"
                           image="/images/sleepy.png"/>
                <SoundPane fx:id="snpGong" GridPane.rowIndex="4" volume="0" name="%Gong"
                           image="/images/gong.png"/>
            </GridPane>
        </GridPane>
    </ScrollPane>
</GridPane>
